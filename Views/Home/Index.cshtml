@model IEnumerable<BookstoreApp.Models.Book>
@{
    ViewData["Title"] = "Strona Główna";
}

<div class="site-wrap">
    <div class="bg-light py-4 mb-4">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="display-4">Witamy w Księgarni Online!</h1>
                    <p class="lead">Odkryj naszą kolekcję najlepszych książek</p>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-12 mb-4">
                <h2 class="h4 mb-3">Polecane książki</h2>
            </div>
        </div>
        <div class="row">
            @foreach (var book in Model.Take(6))
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-book" style="font-size: 4rem; color: #6c757d;"></i>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@book.Name</h5>
                            <p class="card-text text-muted mb-2">@book.Author</p>
                            <p class="card-text"><small class="text-muted">@book.Genre</small></p>
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="h5 text-primary mb-0">@book.Price.ToString("C", new System.Globalization.CultureInfo("pl-PL"))</span>
                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@book.Id" class="btn btn-outline-primary btn-sm">Zobacz</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a asp-controller="Books" asp-action="Index" class="btn btn-primary btn-lg">Zobacz wszystkie książki</a>
            </div>
        </div>
    </div>
</div>
