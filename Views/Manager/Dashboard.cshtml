@{
    ViewData["Title"] = "Panel Kierownika";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Panel Kierownika</h2>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-title">Łączny Przychód</h6>
                    <h3>@ViewBag.TotalRevenue?.ToString("C")</h3>
                </div>
            </div>
        </div>



        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-title">Łącznie Zamówień</h6>
                    <h3>@ViewBag.TotalOrders</h3>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h6 class="card-title">Klienci</h6>
                    <h3>@ViewBag.TotalCustomers</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Zarządzanie</h5>
                </div>
                <div class="card-body">
                    <a href="@Url.Action("ManageBooks")" class="btn btn-secondary btn-block mb-2">Zarządzaj
                        Książkami</a>
                    <a href="@Url.Action("AddBook")" class="btn btn-success btn-block">Dodaj Książkę</a>
                    <a href="@Url.Action("Reports")" class="btn btn-info btn-block mb-2">Zobacz Raporty Sprzedaży</a>
                </div>
            </div>
        </div>


    </div>



</div>