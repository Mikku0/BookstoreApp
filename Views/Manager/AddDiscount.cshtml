@model BookstoreApp.Models.Discount

@{
    ViewData["Title"] = "Dodaj nową zniżkę";
}

<h2>Dodaj nową zniżkę</h2>

<form asp-action="AddDiscount" method="post" novalidate>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Percentage" class="form-label"></label>
        <input asp-for="Percentage" type="number" min="0" max="100" step="0.01" class="form-control" />
        <span asp-validation-for="Percentage" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Dodaj zniżkę</button>
    <a asp-action="ManageDiscounts" class="btn btn-secondary ms-2">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
