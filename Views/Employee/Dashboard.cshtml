@{
    ViewData["Title"] = "Panel Pracownika";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2>Panel Pracownika</h2>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title">Oczekujące Zamówienia</h5>
                    <h2>@ViewBag.PendingOrders</h2>
                    <a href="@Url.Action("ManageOrders")" class="btn btn-dark btn-sm">Zarządzaj zamówieniami</a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Wszystkie Zamówienia</h5>
                    <h2>@ViewBag.TodayOrders</h2>
                    <hr>
                </div>
            </div>
        </div>
        <div class="col-md-6"></div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Zarządzanie dostawami</h5>
                <p class="card-text">Przeglądaj i zarządzaj dostawami zamówień.</p>
                <a href="@Url.Action("ManageDeliveries")" class="btn btn-primary">Zarządzaj dostawami</a>
            </div>
        </div>
    </div>
</div>


</div>
